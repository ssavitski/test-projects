{
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required":false,
  "properties":{
    "pluginLocations": {
      "type":"object",
      "required":true,
      "properties":{
        "config": {
          "type":"object"
        },
        "course": {
          "type":"object",
          "properties":{
            "_settings": {
              "type": "object",
              "required": false,
              "legend": "Complete Button Settings",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "required":true,
                  "default": true,
                  "title": "Enabled",
                  "inputType": {"type": "Boolean", "options": [true, false]},
                  "validators": [],
                  "help": "If set to 'false', Complete Activity button will not be shown on the page"
                },
                "_completeButton": {
                  "type":"object",
                  "title": "Properties",
                  "properties": {
                    "ariaLabel": {
                      "type": "string",
                      "default": "Complete Activity and navigate back by clicking here.",
                      "title": "Button area label",
                      "inputType": "Text",
                      "validators": []
                    },
                    "buttonText": {
                      "type": "string",
                      "default": "Complete Activity",
                      "title": "Button caption",
                      "inputType": "Text",
                      "validators": []
                    }
                  }
                }
              }
            }
          }
        },
        "contentobject": {
          "type":"object"
        },
        "article": {
          "type":"object"
        },
        "block": {
          "type":"object"
        },
        "component": {
          "type":"object"
        }
      }
    }
  }
}
