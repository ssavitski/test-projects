<div class="row">
    <div class="col-md-3">
        <div class="well">
            <p class="text-center">
                {{#link-to 'users' model.login}}
                    <img src={{model.avatar_url}} style="width:140px;" alt="">
                {{/link-to}}
            </p>
            <h4>
                {{#link-to 'users' model.login}}
                    {{name}}
                {{/link-to}}
            </h4>
            <p>
                {{model.company}}<br>
                {{model.location}}<br>
                {{model.email}}<br>
            </p>
            <hr>
            <table class="table table-striped">
                <tr>
                    <td>Followers:</td>
                    <td>{{model.followers}}</td>
                </tr>
                <tr>
                    <td>Repositories:</td>
                    <td>{{model.public_repos}}</td>
                </tr>
                <tr>
                    <td>Gists:</td>
                    <td>{{model.public_gists}}</td>
                </tr>
            </table>
        </div>
        <br>
        {{#link-to 'index'}}&lt;&lt; Back{{/link-to}}
    </div>
</div>
{{outlet}}
